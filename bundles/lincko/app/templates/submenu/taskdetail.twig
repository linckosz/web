		<td class="app_layers_dev_skytasks_checkbox">
			<input type="checkbox" name="checkname">
			<div class="app_layers_dev_skytasks_checkbox_visual"></div>
			<label for=""></label>
		</td>
		<td>
			<div find="title_text" contenteditable="true"></div>
		</td>
		<td class="submenu_taskdetail_share">
			<span class="fa fa-external-link"></span>
		</td>
	</tr>
